@model AnnualMeetingInputModel

@{
    ViewData["Title"] = "Opprett nytt årsmøte";
}
<h2>@ViewData["Title"]</h2>


<form method="POST" asp-action="Create" class="form-row justify-content-between">

    <div class="col-md-12 mb-1">
        <div class="card flex-fill">
            <div class="card-header">
                Informasjon
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title" class="form-label"></label>
                    <input type="text" class="form-control" asp-for="Title">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Invitation"></label>
                    <textarea class="form-control" rows="5" asp-for="Invitation"></textarea>
                    <span asp-validation-for="Invitation" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Info"></label>
                    <textarea class="form-control" rows="5" asp-for="Info"></textarea>
                    <span asp-validation-for="Info" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Summary"></label>
                    <textarea class="form-control" rows="5" asp-for="Summary"></textarea>
                    <span asp-validation-for="Summary" class="text-danger"></span>
                </div>

                <hr />
                <small class="text-muted">Du kan bruke <a href="https://www.markdownguide.org/basic-syntax/" target="_blank">Markdown</a>, f.eks <code>**<b>bold</b>**</code>, <code>_<i>italics</i>_</code> og <code>[link](https://bardarswingclub.no)</code></small>
            </div>
        </div>
    </div>

    <div class="col-md-6">

        <div class="card flex-fill ml-1">
            <div class="card-header">
                Møtet starter
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="MeetingStartsAtDate" class="col-6 col-form-label">Dato</label>
                    <div class="col-6">
                        <input type="date" class="form-control" asp-for="MeetingStartsAtDate">
                    </div>
                    <span asp-validation-for="MeetingStartsAtDate" class="text-danger col-12"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="MeetingStartsAtTime" class="col-6 col-form-label">Tid</label>
                    <div class="col-6">
                        <input type="text" pattern="\d\d:\d\d" class="form-control" asp-for="MeetingStartsAtTime" placeholder="f.eks 12:00">
                    </div>
                    <span asp-validation-for="MeetingStartsAtTime" class="text-danger col-12"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card flex-fill ml-1">
            <div class="card-header">
                Møtet slutter
            </div>
            <div class="card-body">
                <div class="form-group row">
                    <label asp-for="MeetingEndsAtDate" class="col-6 col-form-label">Dato</label>
                    <div class="col-6">
                        <input type="date" class="form-control" asp-for="MeetingEndsAtDate">
                    </div>
                    <span asp-validation-for="MeetingEndsAtDate" class="text-danger col-12"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="MeetingEndsAtTime" class="col-6 col-form-label">Tid</label>
                    <div class="col-6">
                        <input type="text" pattern="\d\d:\d\d" class="form-control" asp-for="MeetingEndsAtTime" placeholder="f.eks 12:00">
                    </div>
                    <span asp-validation-for="MeetingEndsAtTime" class="text-danger col-12"></span>
                </div>
            </div>
        </div>
    </div>

    <div class="col-12 mt-2">
        <button type="submit" class="btn btn-success">Opprett årsmøte</button>
    </div>
</form>