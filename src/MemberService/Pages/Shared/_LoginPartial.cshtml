@using Microsoft.AspNetCore.Identity
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-white" asp-page="/Manage/Index" title="Manage">Hei @User.GetFriendlyName()</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Logg ut</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-page="/Account/Login">Bli medlem</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-white" asp-page="/Account/Login">Logg inn</a>
    </li>
}
</ul>