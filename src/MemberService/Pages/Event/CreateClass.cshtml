@model EventInputModel

@{
    ViewData["ContainerClass"] = "container-fluid";
    ViewData["Title"] = "Opprett nytt kurs";
}

<vc:semester-header id="@Model.SemesterId"></vc:semester-header>
<h2>@ViewData["Title"]</h2>

<form method="POST" asp-action="CreateClass" class="form-row justify-content-between">
    <partial name="_EditEvent" model="@Model" />
    <div class="col-md-12 mt-2">
        <button type="submit" class="btn btn-success">Opprett</button>
    </div>
</form>