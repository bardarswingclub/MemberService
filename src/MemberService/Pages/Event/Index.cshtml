@model IReadOnlyList<Event>

@{
    ViewData["Title"] = "Arrangementer";
}
<h2>
    <a asp-controller="Signup" asp-action="Index">@ViewData["Title"]</a>
    <div class="btn-group float-right">
        <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            Opprett nytt arrangement
        </button>
        <div class="dropdown-menu dropdown-menu-right">
            <a class="dropdown-item" asp-action="Create" asp-route-type="@EventType.Class">@EventType.Class.DisplayDescription()</a>
            <a class="dropdown-item" asp-action="Create" asp-route-type="@EventType.Workshop">@EventType.Workshop.DisplayDescription()</a>
            <a class="dropdown-item" asp-action="Create" asp-route-type="@EventType.Party">@EventType.Party.DisplayDescription()</a>
        </div>
    </div>
</h2>


<table class="table">
    <thead>
        <tr>
            <th>Navn</th>
            <th>Påmeldte</th>
            <th>Deltakere</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var eventEntry in Model)
        {
            <tr>
                <td><a asp-action="View" asp-route-id="@eventEntry.Id">@eventEntry.Title</a> <span class="text-muted">(@eventEntry.Type.DisplayName())</span></td>
                <td>@eventEntry.RolesCount()</td>
                <td>@eventEntry.RolesCount(Status.AcceptedAndPayed)</td>
                <td>@EventStatus(eventEntry)</td>
            </tr>
        }
    </tbody>
</table>

<a href="?archived=true">Se gamle arrangementer også</a>

@functions{
    string EventStatus(Event @event)
    {
        if (@event.Archived)
        {
            return "Arkivert";
        }
        else if (@event.IsOpen())
        {
            if (@event.SignupOptions.SignupOpensAt.HasValue)
            {
                return $"Åpnet {@event.SignupOptions.SignupOpensAt.Value.ToOsloDate()}";
            }
            else
            {
                return "Åpen";
            }
        }
        else
        {
            if (@event.SignupOptions.SignupOpensAt > DateTime.UtcNow)
            {
                return $"Åpner {@event.SignupOptions.SignupOpensAt.Value.ToOsloDate()}";
            }
            if (@event.SignupOptions.SignupClosesAt < DateTime.UtcNow)
            {
                return $"Stengte {@event.SignupOptions.SignupClosesAt.Value.ToOsloDate()}";
            }
            else
            {
                return "Stengt";
            }
        }
    }
}