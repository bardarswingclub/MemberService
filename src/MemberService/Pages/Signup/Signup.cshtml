@using MemberService.Data.ValueTypes
@using MemberService.Pages.Signup
@model SignupModel

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Pages/_CoverLayout.cshtml";
}

<form method="POST" class="card shadow mt-5">
    <h3 class="card-header">
        @ViewData["Title"]
    </h3>
    <div class="card-body">
        <p class="lead">@Model.Description</p>

        @if (Model.User.MustPayClassesFee(Model.Options))
        {
            <div class="alert alert-warning" role="alert">
                For å delta på dette arrangementet må du ha betalt kursavgift. Du kan melde deg på nå og betale først når du har fått plass.
            </div>
        }
        else if (Model.User.MustPayTrainingFee(Model.Options))
        {
            <div class="alert alert-warning" role="alert">
                For å delta på dette arrangementet må du ha betalt treningsavgift. Du kan melde deg på nå og betale først når du har fått plass.
            </div>
        }
        else if (Model.User.MustPayMembershipFee(Model.Options))
        {
            <div class="alert alert-warning" role="alert">
                For å delta på dette arrangementet må du ha betalt medlemsavgift for i år. Du kan melde deg på nå og betale først når du har fått plass.
            </div>
        }
        else if (Model.User.MustPayMembersPrice(Model.Options))
        {
            <div class="alert alert-info" role="alert">
                Det koster @Model.Options.PriceForMembers.FormatMoney() for medlemmer å delta på dette arrangementet. Du kan melde deg på nå og betale først når du har fått plass.
            </div>
        }
        else if(Model.User.MustPayNonMembersPrice(Model.Options))
        {
            <div class="alert alert-info" role="alert">
                Det koster @Model.Options.PriceForNonMembers.FormatMoney() for ikke-medlemmer å delta på dette arrangementet. Du kan melde deg på nå og betale først når du har fått plass.
            </div>
        }

        <partial name="_SignupResponse" model=Model />
    </div>
    <div class="card-footer">
        <button type="submit" class="btn btn-success btn-block">Meld deg på</button>
    </div>
</form>
