@using MemberService.Pages.Signup
@model SignupModel

@{
    ViewData["Title"] = Model.Title;
    Layout = "~/Pages/_CoverLayout.cshtml";
    var date = Model.Options.SignupOpensAt.Value.ToOsloDate();
    var time = Model.Options.SignupOpensAt.Value.ToOsloTime();
}

<div class="card shadow">
    <h3 class="card-header">
        @ViewData["Title"]
    </h3>
    <div class="card-body">
        <p class="lead">@Model.Description</p>

        <p>@Html.Markdown(Model.Options.SignupHelp)</p>

        <div class="alert alert-primary">
            Påmeldinge åpner @date klokken @time
        </div>
    </div>
</div>