@page
@model LoginConfirmationModel
@{
    ViewData["Title"] = "Logg inn";
}

<h1>@ViewData["Title"]</h1>
<p>
    En mail har blitt sendt til @Model.Email med en kode for å logge inn.
</p>

<div class="row">
    <div class="col-md-4">
        <section>
            <form id="login" method="post">
                <hr />
                <input asp-for="Input.Email" value="@Model.Email" type="hidden">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Code"></label>
                    <input asp-for="Input.Code" class="form-control" placeholder="000000" style="letter-spacing: 10px; text-indent: 10px;" maxlength="6" />
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Logg inn</button>
                </div>
            </form>
        </section>
    </div>
</div>