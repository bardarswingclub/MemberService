@page
@model LoginConfirmationModel
@{
    ViewData["Title"] = "Logg inn";
}

<h2>@ViewData["Title"]</h2>

<hr>

@if(Model.ShowError)
{
    <div class="alert alert-danger" role="alert">
        Klarte ikke logge inn, prøv på nytt eller <a asp-page="/Account/Login">trykk her</a> for å logge inn med en annen email.
    </div>
}
else
{
    <div class="alert alert-primary" role="alert">
        En mail har blitt sendt til <strong>@Model.Input.Email</strong> med en kode for å logge inn.
    </div>
}

<div class="row justify-content-md-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                Logg inn
            </div>
            <div class="card-body">
                <form method="post" asp-page="LoginCallback">
                    <input type="hidden" asp-for="Input.ReturnUrl" />
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" readonly/>
                    </div>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Code"></label>
                        <input asp-for="Input.Code" class="form-control form-control-lg" placeholder="000000" style="letter-spacing: 10px; text-indent: 10px; text-align: center" maxlength="6" autofocus />
                        <span asp-validation-for="Input.Code" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Logg inn</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>