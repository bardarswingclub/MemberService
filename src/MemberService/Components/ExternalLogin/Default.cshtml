@model MemberService.Components.ExternalLogin.ExternalLoginViewComponent.Model

@if (Model.ExternalLogins?.Count > 0)
{
    <form id="external-account" asp-controller="ExternalLogin" asp-action="Index" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
        <p>Hvis du har Hotmail eller Outlook epost kan det hende e-post innlogging ikke fungerer. Prøv heller med å trykke på knappen under</p>
        <div class="text-center">
            @foreach (var provider in Model.ExternalLogins)
            {
                <button type="submit" class="btn btn-primary signin-@provider.Name mb-2" name="provider" value="@provider.Name" title="Log in using your @provider.DisplayName account">Logg inn med @provider.DisplayName</button>
            }
        </div>
    </form>
}